<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimens_5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/job_card_view"
        card_view:cardCornerRadius="4dp"
        android:elevation="3dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/job_title"
            android:text="Job Title"
            android:layout_marginTop="@dimen/dimens_5"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/dimens_16sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <android.support.v7.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimens_20"
            android:padding="@dimen/dimens_10"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_hotel_name"
                android:text="Hotel Naveen"
                style="@style/jobCardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_hr_email"
                style="@style/jobCardViewStyle"
                android:layout_marginTop="@dimen/dimens_10"
                android:text="naveen@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:src="@drawable/circle_no_position"
                    android:layout_width="@dimen/dimens_50"
                    android:layout_height="@dimen/dimens_50"
                    android:layout_marginTop="@dimen/dimens_25"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_no_position"
                android:text="10000"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dimens_40"
                style="@style/jobCardViewStyle"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="@dimen/dimens_50" />
            </FrameLayout>
        </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_location"
                android:text="Bangalore"
                android:paddingTop="@dimen/dimens_75"
                android:paddingBottom="@dimen/dimens_5"
                android:layout_marginStart="@dimen/dimens_120"
                android:drawablePadding="@dimen/dimens_5"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                style="@style/jobCardViewStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimens_20"
                android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>