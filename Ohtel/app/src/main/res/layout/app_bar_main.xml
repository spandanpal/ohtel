                android:layout_height="@dimen/dimen_actionbar"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentInsetEnd="@dimen/_0dp"
                    app:contentInsetStart="@dimen/_0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimens_5"
                        android:paddingRight="@dimen/dimens_5">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/tool_bar_left_button_id"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/toolbar_menu_left"
                                android:layout_width="@dimen/dimens_21"
                                android:layout_height="@dimen/dimens_17"
                                android:backgroundTint="@color/white"
                                android:layout_marginStart="@dimen/dimens_4"
                                android:src="@drawable/ic_menu_black_24dp" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/image_back_icon_id"
                                android:layout_width="@dimen/dimens_24"
                                android:layout_height="@dimen/dimens_20"
                                android:layout_marginTop="@dimen/dimens_5"
                                android:src="@drawable/ic_arrow_back_black_24dp"
                                android:tint="@color/view_color"
                                android:visibility="gone" />

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/dimens_28"
                                android:layout_height="@dimen/dimens_50"
                                android:layout_marginStart="@dimen/dimens_10"
                                android:padding="@dimen/dimens_2"/>
                        </android.support.v7.widget.LinearLayoutCompat>
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tool_bar_title_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/tool_bar_left_button_id"
                            android:gravity="center"
                            android:paddingStart="@dimen/dimens_8"
                            android:singleLine="true"
                            android:text="Dashboard"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/dimens_16sp"
                            android:textStyle="bold" />

